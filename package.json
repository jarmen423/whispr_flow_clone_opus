    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^10.7.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
